{{!-- All Scraped Articles View --}}

 {{!-- Main name area --}}
  <div class=jumbotron>
    <h1 class="title">It's All In The Scrape</h1>
    <h2 class="newspaper">The Onion</h2>
  </div>

<div class="container-fluid article-container">
  {{#each articles}}
  <div class="panel panel-default">
    <div class="panel panel-heading">
      <h3>
        <a class="article-link" href="{{link}}" target="_blank">{{title}}</a>
        <a class="btn btn-success save-it" data-id="{{id}}" data-save="true">SAVE ARTICLE</a>
      </h3>
    </div>
    <div class="panel-body">
      <p class="summary">{{summary}}</p>
    </div>
  </div>
  {{/each}}
</div>